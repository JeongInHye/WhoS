}

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <title>WhoS</title>

    <script>
        
    </script>

    <style>
        .cover-image {
            position: absolute;
            top: 15%;
            left: 50%;
            width: 300px;
            height: 250px;
            transform: translate(-50%, -50%)
        }

        .login {
            position: absolute;
            margin: 0;
            top: 50%;
            left: 50%;
            width: 500px;
            height: 400px;
            background: #FCFCFC;
            text-align: center;
            transform: translate(-50%, -50%)
        }

        input[type=text],
        input[type=password] {
            width: 60%;
            padding: 10px 10px;
            margin-top: 20px;
            margin-bottom: 0px;
            display: inline-block;
            border: 2px solid black;
            box-sizing: border-box;
        }

        #button {
            background-color: #BF9000;
            color: white;
            padding: 14px 20px;
            margin: 40px;
            border: none;
            cursor: pointer;
            width: 60%;
            border-radius: 10%;
        }
    </style>

</head>

<body bgcolor="#474644">

    <div class="logo">
        <img src="WhoSlogo1.png" class="cover-image">
    </div>

    <div class="login">
        <form onsubmit="return false;">
            <h2 style="margin: 45px;">거래처 로그인</h2>
            <input type="text" name="id" id="id" placeholder="ID" required />
            <input type="password" name="password" id="password" placeholder="Password" required />
            <input type="submit" value="password" name="password" id="password" />
        </form>
    </div>

</body>

</html>