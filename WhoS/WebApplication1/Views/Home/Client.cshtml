
@{
    ViewData["Title"] = "Client";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <script>
        function ready() {
            document.getElementById("click").click();
            //document.getElementById("enter").value = new Date().toISOString().substring(0, 10);; // 기본 날짜 세팅
        }

        function openPage(pageName, elmnt, color) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablink");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].style.backgroundColor = "";
            }
            document.getElementById(pageName).style.display = "block";
            elmnt.style.backgroundColor = color;
        }



        $(document).ready(ready);

    </script>

    <style>
        body {
            height: 100%;
            margin: 0;
        }

        .height {
            height: 63px;
            background-color: #474644;
        }

        #contents {
            min-height: calc(100vh - 126px);
            background-color: #FCFCFC;
        }

        .tablink {
            background-color: #474644;
            color: white;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 17px 16px;
            font-size: 25px;
            font-weight: bold;
            width: 50%;
        }

            .tablink:hover {
                background-color: #777;
            }

        .tabcontent {
            color: black;
            display: none;
            padding: 100px 20px;
            height: 100%;
        }

        .button {
            background-color: #BF9000;
            color: white;
            padding: 14px 20px;
            margin: 5px;
            margin-bottom: 0px;
            border: none;
            cursor: pointer;
            width: 200px;
            font-size: 20px;
        }

        .input {
            width: 300px;
            height: 25px;
            font-size: 25px;
        }

        #One {
            background-color: #FCFCFC;
            text-align: center;
            font-size: 30px;
            line-height: 1.8;
        }

        #Two {
            background-color: #FCFCFC;
            text-align: center;
        }
    </style>
</head>

<body>
    <div id="header" class="height">
        <button class="tablink" onclick="openPage('One', this, '#BF9000')" id="click">예약하기</button>
        <button class="tablink" onclick="openPage('Two', this, '#BF9000')">예약 현황</button>
    </div>

    <div id="contents">
        <form onsubmit="return false;">
            <div id="One" class="tabcontent">
                거래처명 : <p>
                    물품명 : <input type="text" name="" id="" class="input" required />
                <p>
                    중&nbsp;&nbsp;량 : <input type="text" name="" id="" class="input" required />
                <p>
                    입고일 : <input type="date" id="enter" class="input" required />
                <p>
                    출고일 : <input type="date" id="out" class="input" required />
                <p>
                    이메일 :  <input type="email" name="" class="input" required />
                <p>

                    <input type="submit" value="확인" name="submit" id="button" class="button" />
                    <input type="reset" value="취소" class="button">
            </div>
        </form>

        <div id="Two" class="tabcontent">
        </div>
    </div>

    <div id="footer" class="height">아래글</div>


</body>

</html>

